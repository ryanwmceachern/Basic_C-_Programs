@using NewsLetter1.ViewModels
@model List<SignupVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body">
            @foreach (var SignUp in Model)
            {
                <div class="row">
                    <div class="col">
                        @SignUp.FirstName
                    </div>
                    <div class="col">
                        @SignUp.LastName
                    </div>
                    <div class="col">
                        @SignUp.EmailAddress
                    </div>
                </div>
            }
        </div>
    </div>
</div>
